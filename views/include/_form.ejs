<form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Imie</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Jakub Prach" required>
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="email" name="email" value="" placeholder="jprach@gmail.com" required>
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Płeć</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Mężczyzna" required>
                <label for="radio-2" class="radio-label">Mężczyzna</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Kobieta" required>
                <label for="radio-3" class="radio-label">Kobieta</label>
            </div>
        </div>

        <div class="form-group">
            <label for="gender" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Pracownik" required>
                <label for="radio-4" class="radio-label">Pracownik</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Klient" required>
                <label for="radio-5" class="radio-label">Klient</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Zapisz</button>
        </div>

    </div>
</form>